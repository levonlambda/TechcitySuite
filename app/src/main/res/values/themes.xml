<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with TechCity Blue/White/Black colors -->
    <style name="Base.Theme.TechcitySuite" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors - Blue instead of Purple -->
        <item name="colorPrimary">@color/techcity_blue</item>
        <item name="colorPrimaryVariant">@color/techcity_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/techcity_accent</item>
        <item name="colorSecondaryVariant">@color/techcity_blue_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error colors (keep red for errors) -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/techcity_blue_dark</item>

        <!-- Button colors -->
        <item name="materialButtonStyle">@style/Widget.TechCity.Button</item>
    </style>

    <style name="Theme.TechcitySuite" parent="Base.Theme.TechcitySuite" />

    <!-- Splash Screen Theme - Minimizes system splash, shows custom splash -->
    <style name="Theme.TechcitySuite.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/techcity_blue</item>
        <!-- Disable the default system splash screen animation -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Custom Button Style with Blue theme -->
    <style name="Widget.TechCity.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/techcity_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="Widget.TechCity.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/techcity_blue</item>
        <item name="android:textColor">@color/techcity_blue</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- Custom DatePicker Style -->
    <style name="DatePickerSpinnerStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/techcity_blue</item>
        <item name="colorControlActivated">@color/techcity_blue</item>
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!-- Bold Hint Style for Device Details -->
    <style name="BoldHintStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/techcity_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Normal Hint Style for Device Details -->
    <style name="NormalHintStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>