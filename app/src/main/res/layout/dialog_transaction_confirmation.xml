<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Transaction"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Transaction Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialogTransactionType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cash In"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginEnd="90dp"
            android:maxLines="2"
            android:ellipsize="none" />
    </LinearLayout>

    <!-- Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialogAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="₱0.00"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:fontFamily="monospace"
            android:layout_marginEnd="120dp"
            android:maxLines="1"
            android:ellipsize="none" />
    </LinearLayout>

    <!-- Fee -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fee:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialogFee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="₱0.00"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:fontFamily="monospace"
            android:layout_marginEnd="120dp"
            android:maxLines="1"
            android:ellipsize="none" />
    </LinearLayout>

    <!-- Fee Option -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Fee Option:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialogFeeOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Fee"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:textStyle="italic"
            android:gravity="end"
            android:layout_marginEnd="120dp" />
    </LinearLayout>

    <!-- Total (Customer Pays) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialogTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="₱0.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="end"
            android:fontFamily="monospace"
            android:layout_marginEnd="120dp"
            android:maxLines="1"
            android:ellipsize="none" />
    </LinearLayout>

    <!-- Paid With (conditional) -->
    <LinearLayout
        android:id="@+id/paidWithRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Paid With:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dialogPaidWith"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cash"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginEnd="120dp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="16dp" />

    <!-- Customer Receives Message -->
    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer receives ₱0.00 via GCash"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#3F51B5"
            android:textColor="#3F51B5"
            app:cornerRadius="4dp" />

        <Button
            android:id="@+id/dialogConfirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#3F51B5"
            app:cornerRadius="4dp" />

    </LinearLayout>

</LinearLayout>