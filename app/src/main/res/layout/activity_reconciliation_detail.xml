<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ReconciliationDetailActivity">


    <!-- ========================================================================== -->
    <!-- START OF PART 1: HEADER -->
    <!-- ========================================================================== -->

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/techcity_blue"
        android:padding="16dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Row: Back Button and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Go back"
                android:padding="8dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/dateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="January 31, 2026"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

            <!-- Status Filter Badge -->
            <TextView
                android:id="@+id/statusFilterBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textSize="12sp"
                android:textColor="@color/techcity_blue"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/badge_background"
                android:backgroundTint="@color/white" />

        </LinearLayout>

        <!-- Second Row: Location and Item Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="48dp">

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location: TC-Kapatagan"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/itemCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 items"
                android:textSize="14sp"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Third Row: Manufacturer Count -->
        <TextView
            android:id="@+id/manufacturerCountLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 manufacturers"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginTop="4dp"
            android:layout_marginStart="48dp" />

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 1: HEADER -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 2: OVERALL SUMMARY CARD -->
    <!-- ========================================================================== -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/overallSummaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/techcity_blue"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OVERALL SUMMARY"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/techcity_blue"
                android:letterSpacing="0.1" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- On-Display Row -->
            <LinearLayout
                android:id="@+id/summaryOnDisplayRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="On-Display:"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/summaryOnDisplayQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qty: 20"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnDisplayVerified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver: 8"
                    android:textSize="13sp"
                    android:textColor="@color/techcity_blue"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnDisplayReconciled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rec: 0"
                    android:textSize="13sp"
                    android:textColor="@color/cash_dark_green"
                    android:gravity="center" />

            </LinearLayout>

            <!-- In-Stock Row -->
            <LinearLayout
                android:id="@+id/summaryOnStockRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="In-Stock:"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/summaryOnStockQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qty: 25"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnStockVerified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver: 12"
                    android:textSize="13sp"
                    android:textColor="@color/techcity_blue"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnStockReconciled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rec: 0"
                    android:textSize="13sp"
                    android:textColor="@color/cash_dark_green"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ========================================================================== -->
    <!-- END OF PART 2: OVERALL SUMMARY CARD -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 3: MANUFACTURER LIST -->
    <!-- ========================================================================== -->

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/overallSummaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/overallSummaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¦"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/emptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No items found"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Manufacturer RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manufacturerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/overallSummaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 3: MANUFACTURER LIST -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 4: SCAN FAB -->
    <!-- ========================================================================== -->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/scanFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="Scan"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/techcity_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 4: SCAN FAB -->
    <!-- ========================================================================== -->


</androidx.constraintlayout.widget.ConstraintLayout>