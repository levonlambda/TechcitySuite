<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:paddingBottom="32dp"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".DeviceTransactionActivity">


        <!-- ========================================================================== -->
        <!-- START OF PART 1: HEADER SECTION -->
        <!-- ========================================================================== -->

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Transaction"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- ========================================================================== -->
        <!-- END OF PART 1: HEADER SECTION -->
        <!-- ========================================================================== -->

        <!-- ========================================================================== -->
        <!-- START OF PART 2: DEVICE DETAILS CARD -->
        <!-- ========================================================================== -->

        <!-- Device Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="#3F51B5"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- IMEI Input with Search and Barcode Buttons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMEI / Serial Number"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/imeiInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter IMEI or Serial"
                        app:boxStrokeColor="#3F51B5"
                        app:hintTextColor="#3F51B5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/imeiInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="20" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Search Button with Magnifying Glass Icon -->
                    <ImageButton
                        android:id="@+id/searchButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_search"
                        android:background="@drawable/rounded_button_background_blue"
                        android:contentDescription="Search"
                        android:padding="12dp"
                        android:scaleType="fitCenter" />

                    <!-- Barcode Scanner Button -->
                    <ImageButton
                        android:id="@+id/barcodeButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_barcode_scanner"
                        android:background="@drawable/rounded_button_background_blue"
                        android:contentDescription="Scan Barcode"
                        android:padding="12dp"
                        app:tint="@color/white" />

                </LinearLayout>

                <!-- Device Details Label (dynamic - changes to brand name) -->
                <TextView
                    android:id="@+id/deviceDetailsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Details"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/deviceDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Will be populated from IMEI"
                    app:boxStrokeColor="@color/gray"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/deviceDetailsInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:enabled="false"
                        android:textColor="@color/gray"
                        android:minLines="1"
                        android:maxLines="1"
                        android:gravity="top|start"
                        android:textSize="14sp"
                        android:autoSizeStepGranularity="1sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/priceInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter price"
                    app:prefixText="₱"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/priceInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:inputType="numberDecimal" />



                </com.google.android.material.textfield.TextInputLayout>

                <!-- Discount Amount and Percent in Horizontal Layout -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/discountInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Amount"
                        app:prefixText="₱"
                        app:boxStrokeColor="#3F51B5"
                        app:hintTextColor="#3F51B5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/discountInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/discountPercentLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Percent"
                        app:suffixText="%"
                        app:boxStrokeColor="#3F51B5"
                        app:hintTextColor="#3F51B5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/discountPercentInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Transaction Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction Type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/purchaseTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select transaction type"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/purchaseTypeDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 2: DEVICE DETAILS CARD -->
        <!-- ========================================================================== -->


        <!-- ========================================================================== -->
        <!-- START OF PART 3: CASH PAYMENT CARD -->
        <!-- ========================================================================== -->

        <!-- Cash Payment Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cashPaymentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/cash_dark_green"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/deviceCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Transaction Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/cash_dark_green"
                    android:layout_marginBottom="16dp" />

                <!-- Amount (Price - Discount) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cashAmountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/gray"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cashAmountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="@color/cash_dark_green" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Payment Source -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Source"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/paymentSourceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select payment source"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/paymentSourceDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 3: CASH PAYMENT CARD -->
        <!-- ========================================================================== -->

        <!-- ========================================================================== -->
        <!-- START OF PART 6: HOME CREDIT / SKYRO DETAILS CARD -->
        <!-- ========================================================================== -->

        <!-- Home Credit / Skyro Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/homeCreditCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/red"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cashPaymentCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/homeCreditTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Credit / Skyro Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_marginBottom="16dp" />

                <!-- Down Payment and Brand Zero in Horizontal Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Down Payment (FIRST) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Down Payment"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/hcDownPaymentLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Amount"
                            app:prefixText="₱"
                            app:boxStrokeColor="#3F51B5"
                            app:hintTextColor="#3F51B5"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hcDownPaymentInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Brand Zero (SECOND) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brand Zero"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/brandZeroLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select"
                            app:boxStrokeColor="#3F51B5"
                            app:hintTextColor="#3F51B5"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                            <AutoCompleteTextView
                                android:id="@+id/brandZeroDropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Balance and Subsidy in Horizontal Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Balance (FIRST) -->
                    <LinearLayout
                        android:id="@+id/hcBalanceContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/hcBalanceLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/gray"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hcBalanceInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:enabled="false"
                                android:textStyle="bold"
                                android:textColor="@color/red" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Subsidy (SECOND - Conditional, only when Brand Zero = Yes) -->
                    <LinearLayout
                        android:id="@+id/hcSubsidyContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/hcSubsidyLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subsidy (3%)"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/hcSubsidyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/gray"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hcSubsidyInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:enabled="false"
                                android:textStyle="bold"
                                android:textColor="@color/green" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Down Payment Source (Separate Line, conditional) -->
                <TextView
                    android:id="@+id/hcDownPaymentSourceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down Payment Source"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hcDownPaymentSourceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select source"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/hcDownPaymentSourceDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 6: HOME CREDIT / SKYRO DETAILS CARD -->
        <!-- ========================================================================== -->

        <!-- ========================================================================== -->
        <!-- START OF PART 7: IN-HOUSE INSTALLMENT CARD -->
        <!-- ========================================================================== -->

        <!-- In-House Installment Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/inHouseCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="#9C27B0"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/homeCreditCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In-House Installment Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginBottom="16dp" />

                <!-- Row 1: Down Payment and Interest in Horizontal Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Down Payment (FIRST) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Down Payment"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ihDownPaymentLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Amount"
                            app:prefixText="₱"
                            app:boxStrokeColor="#3F51B5"
                            app:hintTextColor="#3F51B5"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ihDownPaymentInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:inputType="number" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Interest (SECOND) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interest"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/interestLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Percent"
                            app:suffixText="%"
                            app:boxStrokeColor="#3F51B5"
                            app:hintTextColor="#3F51B5"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/interestInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Row 2: Monthly Amount and Months to Pay in Horizontal Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- Monthly Amount (FIRST - Read Only) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Amount"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/monthlyAmountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeColor="@color/gray"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/monthlyAmountInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:focusable="false"
                                android:enabled="false"
                                android:textStyle="bold"
                                android:textColor="#9C27B0" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Months to Pay (SECOND) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Months to Pay"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/monthsToPayLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Months"
                            app:boxStrokeColor="#3F51B5"
                            app:hintTextColor="#3F51B5"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/monthsToPayInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:inputType="number" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- Balance (Full Width - Read Only) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ihBalanceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/gray"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ihBalanceInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="#9C27B0" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Down Payment Source (Last - Conditional) -->
                <TextView
                    android:id="@+id/ihDownPaymentSourceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down Payment Source"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ihDownPaymentSourceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select source"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/ihDownPaymentSourceDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 7: IN-HOUSE INSTALLMENT CARD -->
        <!-- ========================================================================== -->

        <!-- ========================================================================== -->
        <!-- START OF PART 8: ACTION BUTTONS -->
        <!-- ========================================================================== -->

        <!-- Barrier to position buttons below the last visible card -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/cardsBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cashPaymentCard,homeCreditCard,inHouseCard" />

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintTop_toBottomOf="@id/cardsBarrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#3F51B5"
                android:textColor="#3F51B5"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#3F51B5"
                app:cornerRadius="4dp" />

        </LinearLayout>

        <!-- ========================================================================== -->
        <!-- END OF PART 8: ACTION BUTTONS -->
        <!-- ========================================================================== -->

        <!-- ========================================================================== -->
        <!-- START OF PART 10: PROGRESS INDICATOR -->
        <!-- ========================================================================== -->

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:progressTint="#3F51B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ========================================================================== -->
        <!-- END OF PART 10: PROGRESS INDICATOR -->
        <!-- ========================================================================== -->


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>