<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Payment Number -->
    <TextView
        android:id="@+id/paymentNumberText"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="1"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/techcity_blue"
        android:layout_marginEnd="12dp" />

    <!-- Payment Details (Date only) -->
    <TextView
        android:id="@+id/paymentDateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="12/01/2025"
        android:textSize="13sp"
        android:textColor="@color/black" />

    <!-- Payment Amount with Source Badge -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Amount Row with Source Badge on LEFT -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Source Badge BEFORE amount -->
            <TextView
                android:id="@+id/paymentSourceBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/rounded_badge_small"
                android:backgroundTint="@color/cash_dark_green"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/paymentAmountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₱4,787.84"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cash_dark_green" />

        </LinearLayout>

        <!-- Remaining After -->
        <TextView
            android:id="@+id/remainingAfterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bal: ₱23,939.21"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>