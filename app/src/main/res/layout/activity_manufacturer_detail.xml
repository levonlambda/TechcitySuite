<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ManufacturerDetailActivity">


    <!-- ========================================================================== -->
    <!-- START OF PART 1: HEADER -->
    <!-- ========================================================================== -->

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/techcity_blue"
        android:padding="16dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Row: Back Button and Manufacturer Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Go back"
                android:padding="8dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/manufacturerLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Samsung"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

            <!-- Completion Badge (shown when all verified) -->
            <ImageView
                android:id="@+id/completionBadge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                android:contentDescription="All items verified"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Second Row: Item Count, Verified Count (centered), and Filter Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="48dp">

            <TextView
                android:id="@+id/itemCountLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12 items"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/verifiedCountLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5 verified"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center" />

            <Button
                android:id="@+id/filterToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Show All"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/white"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 1: HEADER -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 2: MANUFACTURER SUMMARY CARD -->
    <!-- ========================================================================== -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/manufacturerSummaryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/techcity_blue"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/summaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAMSUNG SUMMARY"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/techcity_blue"
                android:letterSpacing="0.1" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- On-Display Row -->
            <LinearLayout
                android:id="@+id/summaryOnDisplayRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="On-Display:"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/summaryOnDisplayQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qty: 5"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnDisplayVerified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver: 2"
                    android:textSize="13sp"
                    android:textColor="@color/techcity_blue"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnDisplayReconciled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rec: 0"
                    android:textSize="13sp"
                    android:textColor="@color/cash_dark_green"
                    android:gravity="center" />

            </LinearLayout>

            <!-- In-Stock Row -->
            <LinearLayout
                android:id="@+id/summaryOnStockRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="In-Stock:"
                    android:textSize="13sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/summaryOnStockQty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Qty: 7"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnStockVerified"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ver: 3"
                    android:textSize="13sp"
                    android:textColor="@color/techcity_blue"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/summaryOnStockReconciled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rec: 0"
                    android:textSize="13sp"
                    android:textColor="@color/cash_dark_green"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ========================================================================== -->
    <!-- END OF PART 2: MANUFACTURER SUMMARY CARD -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 3: PHONE LIST -->
    <!-- ========================================================================== -->

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/manufacturerSummaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/manufacturerSummaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“±"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/emptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No phones found"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginTop="16dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Phone RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phonesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/manufacturerSummaryCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 3: PHONE LIST -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 4: SCAN FAB -->
    <!-- ========================================================================== -->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/scanFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="Scan"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/techcity_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 4: SCAN FAB -->
    <!-- ========================================================================== -->


</androidx.constraintlayout.widget.ConstraintLayout>