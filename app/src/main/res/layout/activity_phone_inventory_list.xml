<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PhoneInventoryListActivity">


    <!-- ========================================================================== -->
    <!-- START OF PART 1: HEADER SECTION -->
    <!-- ========================================================================== -->

    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/techcity_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title Row -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Inventory"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="start" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventory Reconciliation Records"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 1: HEADER SECTION -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 2: PROGRESS AND EMPTY STATE -->
    <!-- ========================================================================== -->

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        android:indeterminateTint="@color/techcity_blue"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toTopOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toTopOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“±"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/emptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No reconciliation records"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap + to start a new reconciliation"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 2: PROGRESS AND EMPTY STATE -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 3: RECONCILIATION LIST -->
    <!-- ========================================================================== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reconciliationRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toTopOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 3: RECONCILIATION LIST -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 4: ADD BUTTON -->
    <!-- ========================================================================== -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:contentDescription="Add New Reconciliation"
        app:backgroundTint="@color/techcity_blue"
        app:tint="@color/white"
        app:fabSize="normal"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 4: ADD BUTTON -->
    <!-- ========================================================================== -->


</androidx.constraintlayout.widget.ConstraintLayout>