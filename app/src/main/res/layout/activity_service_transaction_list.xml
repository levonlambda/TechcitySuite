<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ServiceTransactionListActivity">

    <!-- ========================================================================== -->
    <!-- START OF PART 1: HEADER SECTION -->
    <!-- ========================================================================== -->

    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/techcity_blue"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Transactions"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- Date Label -->
                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Menu Button (Date Picker) -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Select Date"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Summary Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Total Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalAmountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount (All)"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/totalAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Total Fee -->
            <LinearLayout
                android:id="@+id/feeSummaryLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fee"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/totalFeeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Transaction Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transactions"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/transactionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 1: HEADER SECTION -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 2: FILTER BUTTONS -->
    <!-- ========================================================================== -->

    <LinearLayout
        android:id="@+id/filterButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- All Button -->
        <Button
            android:id="@+id/filterAllButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="All"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/techcity_blue"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Cash In Button -->
        <Button
            android:id="@+id/filterCashInButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="In"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/cash_dark_green"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Cash Out Button -->
        <Button
            android:id="@+id/filterCashOutButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Out"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/red"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Load Button -->
        <Button
            android:id="@+id/filterLoadButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Load"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/mobile_loading_purple"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Skyro Button -->
        <Button
            android:id="@+id/filterSkyroButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Skyro"
            android:textSize="9sp"
            android:layout_marginEnd="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/skyro_light_blue"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- HC Button -->
        <Button
            android:id="@+id/filterHCButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="HC"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@color/red"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Misc Button -->
        <Button
            android:id="@+id/filterMiscButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Misc"
            android:textSize="10sp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:backgroundTint="@android:color/darker_gray"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 2: FILTER BUTTONS -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 3: TRANSACTION LIST -->
    <!-- ========================================================================== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/filterButtonsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No transactions for this date"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/filterButtonsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/filterButtonsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 3: TRANSACTION LIST -->
    <!-- ========================================================================== -->


    <!-- ========================================================================== -->
    <!-- START OF PART 4: ADD BUTTON -->
    <!-- ========================================================================== -->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="New Transaction"
        android:textColor="@color/white"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/techcity_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========================================================================== -->
    <!-- END OF PART 4: ADD BUTTON -->
    <!-- ========================================================================== -->

</androidx.constraintlayout.widget.ConstraintLayout>