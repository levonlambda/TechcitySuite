<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LedgerViewActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title Section with Blue Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/ledgerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cash Ledger"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <!-- All Credits Button -->
            <Button
                android:id="@+id/allCreditsButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All Credits"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="#3F51B5"
                style="@style/Widget.MaterialComponents.Button"
                app:cornerRadius="18dp" />
        </LinearLayout>

        <!-- Balance Section with White Background - Single Line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Total -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_gray" />

            <!-- Credit -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/creditAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/light_gray" />

            <!-- Debit -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/debitAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Ledger Type Selector -->
    <HorizontalScrollView
        android:id="@+id/ledgerSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/cashButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Cash"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/cash_dark_green"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/gcashButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="GCash"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3F51B5"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/paymayaButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="PayMaya"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/green"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/othersButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Others"
                android:textSize="14sp"
                android:backgroundTint="@color/red"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Ledger Entries List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ledgerRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/ledgerSelector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No transactions yet"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ledgerSelector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>