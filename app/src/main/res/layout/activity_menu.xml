<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <!-- Menu Bar -->
    <LinearLayout
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/techcity_blue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/techcity_suite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical" />

        <!-- Kebab Menu Button -->
        <ImageButton
            android:id="@+id/kebabMenuButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_kebab_menu"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/menu_button"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Logo positioned to the left of centered title -->
    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/techcity_logo"
        android:contentDescription="TechCity Logo"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/menuBar"
        app:layout_constraintEnd_toStartOf="@id/appTitle" />

    <!-- App Title - Centered -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/techcity_suite"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/menuBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/business_management_system"
        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Menu Cards Container -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/versionText"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Phone Inventory Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inventoryCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/inventoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/inventoryIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:contentDescription="@string/inventory_icon"
                        app:tint="@color/teal_700"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/inventoryTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_inventory"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/inventoryIcon"
                        app:layout_constraintStart_toEndOf="@id/inventoryIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/search_phones_by_imei"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/inventoryTitle"
                        app:layout_constraintStart_toEndOf="@id/inventoryIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Devices Transactions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/devicesCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/devicesTransactionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/devicesIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_mobile_phone"
                        android:contentDescription="@string/devices_transactions"
                        app:tint="@color/techcity_blue"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/devicesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/devices_transactions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/devicesIcon"
                        app:layout_constraintStart_toEndOf="@id/devicesIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add_devices_inventory"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/devicesTitle"
                        app:layout_constraintStart_toEndOf="@id/devicesIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Accessories Transactions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accessoriesCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/accessoriesTransactionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/accessoriesIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_charger"
                        android:contentDescription="@string/accessories_transactions"
                        app:tint="#FF9800"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/accessoriesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/accessories_transactions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/accessoriesIcon"
                        app:layout_constraintStart_toEndOf="@id/accessoriesIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add_accessories_inventory"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/accessoriesTitle"
                        app:layout_constraintStart_toEndOf="@id/accessoriesIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Service Transactions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/transactionsCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/transactionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/transactionsIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_coin"
                        android:contentDescription="@string/transactions_icon"
                        app:tint="#4CAF50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/transactionsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_transactions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/transactionsIcon"
                        app:layout_constraintStart_toEndOf="@id/transactionsIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/record_service_transactions"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/transactionsTitle"
                        app:layout_constraintStart_toEndOf="@id/transactionsIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ledger Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ledgerCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ledgerButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ledgerIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_book"
                        android:contentDescription="@string/ledger_icon"
                        app:tint="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/ledgerTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ledgers"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/ledgerIcon"
                        app:layout_constraintStart_toEndOf="@id/ledgerIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/view_ledgers"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/ledgerTitleText"
                        app:layout_constraintStart_toEndOf="@id/ledgerIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================================================== -->
            <!-- MENU SECTION TO ADD BETWEEN LEDGER CARD AND ACCOUNT RECEIVABLE CARD -->
            <!-- Copy this entire section and paste it after the closing tag of ledgerCard -->
            <!-- and before the opening tag of accountReceivableCard -->
            <!-- ========================================================================== -->

            <!-- End of Day Report Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/endOfDayCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/endOfDayButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/endOfDayIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:contentDescription="End of Day Icon"
                        app:tint="#009688"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/endOfDayTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="End of Day"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/endOfDayIcon"
                        app:layout_constraintStart_toEndOf="@id/endOfDayIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Daily transaction summary reports"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/endOfDayTitle"
                        app:layout_constraintStart_toEndOf="@id/endOfDayIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================================================== -->
            <!-- END OF EOD CARD SECTION -->
            <!-- ========================================================================== -->

            <!-- Account Receivable Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accountReceivableCard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/accountReceivableButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/accountReceivableIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:contentDescription="@string/account_receivable"
                        app:tint="#ff0000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/accountReceivableTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/account_receivable"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="@id/accountReceivableIcon"
                        app:layout_constraintStart_toEndOf="@id/accountReceivableIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_receivables"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/accountReceivableTitle"
                        app:layout_constraintStart_toEndOf="@id/accountReceivableIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Version info at bottom -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_1_0"
        android:textSize="12sp"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>