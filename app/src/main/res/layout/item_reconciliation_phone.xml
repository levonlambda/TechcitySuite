<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/light_gray"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">


    <!-- ========================================================================== -->
    <!-- START OF PART 1: CARD CONTENT -->
    <!-- ========================================================================== -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Manufacturer and Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/manufacturerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Samsung"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/techcity_blue" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In-Stock"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/badge_background"
                android:backgroundTint="@color/techcity_blue" />

        </LinearLayout>

        <!-- Model Row -->
        <TextView
            android:id="@+id/modelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galaxy S24 Ultra"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- RAM + Storage Row -->
        <TextView
            android:id="@+id/ramStorageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12GB + 256GB"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

        <!-- Color Row -->
        <TextView
            android:id="@+id/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titanium Black"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

        <!-- Retail Price Row -->
        <TextView
            android:id="@+id/retailPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚±75,990.00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/cash_dark_green"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- IMEI1 Row -->
        <LinearLayout
            android:id="@+id/imei1Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="IMEI 1:"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/imei1Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123456789012345"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- IMEI2 Row -->
        <LinearLayout
            android:id="@+id/imei2Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="IMEI 2:"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/imei2Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123456789012346"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Serial Number Row -->
        <LinearLayout
            android:id="@+id/serialRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Serial:"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/serialText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SN123456789"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Location and Verification Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TC-Kapatagan"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Verification Status (Not Verified) -->
            <TextView
                android:id="@+id/notVerifiedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Verified"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:visibility="visible" />

            <!-- Verification Status (Verified) - shown when verified -->
            <LinearLayout
                android:id="@+id/verifiedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/verifiedCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />

                <TextView
                    android:id="@+id/verifiedByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified by Admin"
                    android:textSize="11sp"
                    android:textColor="@color/cash_dark_green"
                    android:layout_marginStart="-4dp" />

            </LinearLayout>

            <!-- For Reconciliation Status - shown when marked for reconciliation -->
            <TextView
                android:id="@+id/forReconciliationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Reconciliation"
                android:textSize="11sp"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- ========================================================================== -->
    <!-- END OF PART 1: CARD CONTENT -->
    <!-- ========================================================================== -->


</com.google.android.material.card.MaterialCardView>