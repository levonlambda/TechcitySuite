<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ProgramSettingsActivity">


        <!-- ========================================================================== -->
        <!-- START OF PART 1: HEADER SECTION -->
        <!-- ========================================================================== -->

        <!-- Blue Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configure application preferences"
                android:textSize="14sp"
                android:textColor="#B3C5E8"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- ========================================================================== -->
        <!-- END OF PART 1: HEADER SECTION -->
        <!-- ========================================================================== -->


        <!-- ========================================================================== -->
        <!-- START OF PART 2: USER AND STORE SETTINGS CARD -->
        <!-- ========================================================================== -->

        <!-- User and Store Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userSettingsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="#3F51B5"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_marginBottom="16dp" />

                <!-- User Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/userInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter username"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/userInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Store Location Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Location"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/storeLocationInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter store location"
                    app:boxStrokeColor="#3F51B5"
                    app:hintTextColor="#3F51B5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/storeLocationInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 2: USER AND STORE SETTINGS CARD -->
        <!-- ========================================================================== -->


        <!-- ========================================================================== -->
        <!-- START OF PART 3: ACCOUNT SETTINGS CARD -->
        <!-- ========================================================================== -->

        <!-- Account Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/accountSettingsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="#4CAF50"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/userSettingsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="16dp" />

                <!-- Cash Account Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/cash_dark_green"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cashAccountInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter cash account name"
                    app:boxStrokeColor="@color/cash_dark_green"
                    app:hintTextColor="@color/cash_dark_green"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cashAccountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@color/cash_dark_green" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- GCash Account Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GCash Account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/gcashAccountInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter GCash account name/number"
                    app:boxStrokeColor="@android:color/holo_blue_dark"
                    app:hintTextColor="@android:color/holo_blue_dark"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/gcashAccountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- PayMaya Account Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayMaya Account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/paymayaAccountInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter PayMaya account name/number"
                    app:boxStrokeColor="@android:color/holo_green_light"
                    app:hintTextColor="@android:color/holo_green_light"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/paymayaAccountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_light" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- QRPH Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QRPH Account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/mobile_loading_purple"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/qrphAccountInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter QRPH account details"
                    app:boxStrokeColor="@color/mobile_loading_purple"
                    app:hintTextColor="@color/mobile_loading_purple"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/qrphAccountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@color/mobile_loading_purple" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Credit Card Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card Account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/creditCardAccountInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter credit card account details"
                    app:boxStrokeColor="@android:color/holo_orange_dark"
                    app:hintTextColor="@android:color/holo_orange_dark"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/creditCardAccountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_orange_dark" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Other Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Account"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/otherAccountInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter other account details"
                    app:boxStrokeColor="@android:color/holo_red_dark"
                    app:hintTextColor="@android:color/holo_red_dark"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otherAccountInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 3: ACCOUNT SETTINGS CARD -->
        <!-- ========================================================================== -->

        <!-- ========================================================================== -->
        <!-- START OF PART 4: FEATURE SETTINGS CARD -->
        <!-- ========================================================================== -->

        <!-- Feature Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/featureSettingsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="#9C27B0"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/accountSettingsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feature Settings"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginBottom="16dp" />

                <!-- Account Receivable Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Receivable"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enable unpaid balance tracking for this device"
                            android:textSize="12sp"
                            android:textColor="@color/gray" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/accountReceivableSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================================================== -->
        <!-- END OF PART 4: FEATURE SETTINGS CARD -->
        <!-- ========================================================================== -->


        <!-- ========================================================================== -->
        <!-- START OF PART 5: ACTION BUTTONS -->
        <!-- ========================================================================== -->

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/featureSettingsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#3F51B5"
                android:textColor="#3F51B5"
                app:cornerRadius="4dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#3F51B5"
                app:cornerRadius="4dp" />

        </LinearLayout>

        <!-- ========================================================================== -->
        <!-- END OF PART 5: ACTION BUTTONS -->
        <!-- ========================================================================== -->


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>